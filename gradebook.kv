#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManagement:
    LoginPage:
        id: login_page
    StudentPage:
        id: student_page
    InstructorPage:
        id: instructor_page
    StudentSelectionPage:
        id: student_selection_page
    InstructorSelectionPage:
        id: instructor_selection_page

<LoginPage>:
    name: "login_page"
    GridLayout:
        id: login_grid
        rows: 3
        cols: 2
        Label:
            text: "Username"
        TextInput:
            id: login_name
            multiline: False
        Label:
            text: "Password"
        TextInput:
            id: login_pass
            password: True # hide password
            multiline: False
        Button:
            id: student_login
            text: "Sign in as Student"
            on_release:
                app.root.transition = SlideTransition(direction='left')
                root.verify_student()
        Button:
            id: instructor_login
            text: "Sign in as Instructor"
            on_release:
                app.root.transition = SlideTransition(direction='left')
                root.verify_instructor()

